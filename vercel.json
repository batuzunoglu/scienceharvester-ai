{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": "frontend/.next" 
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",         
      "dest": "/backend/main.py"  
                                   
    },

    {
      "handle": "filesystem"
    }

  ]
}