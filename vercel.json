{
  "version": 2,
  "builds": [
    {
      "src": "frontend/next.config.js",
      "use": "@vercel/next",
      "config": {
        "distDir": "frontend/.next"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/_next/(.*)",
      "dest": "frontend/_next/$1"
    },
    {
      "src": "/(.*(?:ico|png|jpg|jpeg|gif|svg|js|css|map|txt|webmanifest|woff2|woff|ttf|eot))",
      "dest": "frontend/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
